<!-- Armazena uma variável, mas não mostra ela na tela -->

<aiml version="1.0.1">
	<category>
		<pattern>MEU NOME E *</pattern>
		<template>
			É um prazer te conhecer.
			<think>
				<set name="userName">
					<star />
				</set>
			</think>
		</template>
	</category>

	<category>
		<pattern>ME CHAMO *</pattern>
		<template>
			É um prazer te conhecer.
			<think>
				<set name="userName">
					<star />
				</set>
			</think>
		</template>
	</category>

	<category>
		<pattern>QUAL MEU NOME</pattern>
		<template>
			<condition>
				<li name="userName" value="">
					Não sei seu nome. Qual é o seu nome?
				</li>
				<li>
					Seu nome é
					<get name="userName" />
					.
				</li>
			</condition>
		</template>
	</category>
</aiml>