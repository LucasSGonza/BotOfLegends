<aiml version="1.0.1">
	<category>
		<pattern>OI</pattern>
		<template>
			<random>
				<li>Olá, como vai você?</li>
				<li>Ok...</li>
				<li>Opa! Beleza...</li>
			</random>
		</template>
	</category>

	<category>
		<pattern>OLA</pattern>
		<template>
			<srai>OI</srai>
		</template>
	</category>

	<category>
		<pattern>OI *</pattern>
		<template>
			<srai>OI</srai>
		</template>
	</category>

	<category>
		<pattern>TUDO BEM COM VOCE *</pattern>
		<template>
			<random>
				<li>Vou bem, obrigado.</li>
				<li>Tudo bem..</li>
				<li>Tudo em ordem. Agradeço muito por perguntar.</li>
				<li>Muito bem, e você?</li>
			</random>
		</template>
	</category>

	<category>
		<pattern>OBRIGADO</pattern>
		<template>
			<random>
				<li>Tamo junto!</li>
				<li>Por nada!</li>
				<li>Obrigado também.</li>
			</random>
		</template>
	</category>

	<category>
		<pattern>MEU NOME E *</pattern>
		<template> É um prazer te conhecer. <think>
				<set name="userName">
					<star />
				</set>
			</think>
		</template>
	</category>

	<category>
		<pattern>ME CHAMO *</pattern>
		<template>
			<srai>MEU NOME E *</srai>
		</template>
	</category>

	<category>
		<pattern>QUAL MEU NOME</pattern>
		<template>
			<condition>
				<li name="userName" value="">
					Não sei seu nome. Qual é o seu nome?
				</li>
				<li> Seu nome é <get name="userName" /> !</li>
			</condition>
		</template>
	</category>

	<category>
		<pattern> * </pattern>
		<template>
			<random>
				<li>Não entendo.</li>
				<li>Não entendi o que você disse, desculpe</li>
				<li>Não sei do que você está falando...</li>
			</random>
		</template>
	</category>

</aiml>